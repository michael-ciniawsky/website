{
  "name": "michael-ciniawsky.de",
  "version": "0.0.1",
  "description": "Website",
  "main": "server.js",
  "engines": {
    "node": ">=6",
    "npm": ">=3"
  },
  "scripts": {
    "lint": "echo '=> Linting' && standard",
    "test": "echo '=> Testing' && ava './client/**/*.test.js'",
    "cover": "echo '=> Coverage' && nyc --reporter=lcov --reporter=text npm run test",
    "build": "echo '=> Building' && NODE_ENV=development webpack --config webpack.config.js",
    "serve": "echo '=> Starting DEV' && NODE_ENV=development webpack-dev-server --config webpack.server.js",
    "prestart": "echo '=> Bundling' && NODE_ENV=production webpack --config webpack.config.js",
    "start": "echo '=> Starting Server' && nodemon --exec node server"
  },
  "ava": {
    "babel": "inherit"
  },
  "nyc": {
    "all": true,
    "require": "babel-register",
    "include": [
      "client/app/**/**"
    ],
    "extension": [
      ".jsx"
    ]
  },
  "babel": {
    "env": {
      "development": {
        "sourceMaps": "inline"
      }
    },
    "plugins": [],
    "presets": [
      "es2015",
      "react"
    ]
  },
  "dependencies": {
    "body-parser": "^1.14.2",
    "cookie-parser": "^1.4.1",
    "express": "^4.13.4",
    "express-posthtml": "^1.0.3",
    "express-session": "^1.12.1",
    "react": "^15.0.1",
    "react-dom": "^15.0.1",
    "react-redux": "^4.4.5",
    "react-router": "^2.4.0",
    "redux": "^3.5.2",
    "serve-favicon": "^2.3.0"
  },
  "devDependencies": {
    "ava": "^0.14.0",
    "babel-core": "^6.7.7",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "coveralls": "^2.11.9",
    "css-loader": "^0.23.1",
    "file-loader": "^0.8.5",
    "gulp": "^3.9.0",
    "gulp-babel": "^6.1.2",
    "gulp-cache": "^0.4.2",
    "gulp-concat": "^2.6.0",
    "gulp-if": "^2.0.0",
    "gulp-imagemin": "^2.2.1",
    "gulp-inject": "^4.0.0",
    "gulp-load-plugins": "^1.0.0",
    "gulp-load-tasks": "^0.8.4",
    "gulp-plumber": "^1.0.1",
    "gulp-postcss": "^6.1.0",
    "gulp-posthtml": "^1.5.2",
    "gulp-rename": "^1.2.2",
    "gulp-size": "^2.0.0",
    "html-webpack-plugin": "^2.14.0",
    "nyc": "^6.4.0",
    "postcss-bem": "^0.4.1",
    "postcss-loader": "^0.8.0",
    "posthtml-bem": "^0.2.2",
    "standard": "^6.0.8",
    "style-loader": "^0.13.0",
    "stylefmt": "^3.2.1",
    "stylelint": "^6.2.2",
    "stylelint-config-standard": "^6.0.0",
    "url-loader": "^0.5.7",
    "webpack": "^1.13.0",
    "webpack-dev-server": "^1.14.1",
    "webpack-notifier": "^1.3.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/michael-ciniawsky/website.git"
  },
  "scripts": {
    "install": "sudo npm install -g gulp && sudo npm install --save",
    "start": "gulp",
    "test":  "gulp test"
  },
  "dependencies": {},
  "devDependencies": {},
  "author": "Michael Ciniawsky <michael.ciniawsky@gmail.com>",
  "license": "MIT"
}
