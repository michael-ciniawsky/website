{
  "name": "michael-ciniawsky.de",
  "version": "0.0.1",
  "description": "Website",
  "main": "server/",
  "engines": {"node": ">=6","npm": ">=3"},
  "scripts": {
    "pretest": "echo '=> Linting' && standard",
    "test": "echo '=> Testing' && sudo nyc ava './**/*.test.js'",
    "clean": "echo '=> Cleaning' && rm -rf public/*.js",
    "build": "echo '=> Building' && NODE_ENV=development webpack --config webpack.config.js",
    "serve": "echo '=> Developing' && NODE_ENV=development webpack-dev-server --config webpack.server.js",
    "prestart": "npm run clean && npm run build",
    "start": "echo '=> Starting' && sudo nodemon server/"
  },
  "ava": {
    "babel": "inherit",
    "source": ["!public"]
  },
  "nyc": {
    "all": true,
    "require": "babel-register",
    "include": ["client"],
    "extension": ["js", "jsx"]
  },
  "standard": {
    "ignore": ["client", "server", "public"]
  },
  "babel": {
    "env": {
      "development": {"sourceMaps": "inline"}
    },
    "presets": ["es2015", "react"]
  },
  "dependencies": {
    "body-parser": "^1.15.1",
    "cookie-parser": "^1.4.3",
    "express": "^4.13.4",
    "express-posthtml": "^1.0.4",
    "express-session": "^1.12.1",
    "immutable": "^3.8.1",
    "react": "^15.1.0",
    "react-dom": "^15.1.0",
    "react-router": "^2.4.1",
    "serve-favicon": "^2.3.0"
  },
  "devDependencies": {
    "ava": "^0.15.2",
    "babel-core": "^6.9.1",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.5.0",
    "babel-register": "^6.7.2",
    "coveralls": "^2.11.9",
    "css-loader": "^0.23.1",
    "enzyme": "^2.3.0",
    "file-loader": "^0.8.5",
    "html-loader": "^0.4.3",
    "json-loader": "^0.5.4",
    "nyc": "^6.4.4",
    "postcss-bem": "^0.4.1",
    "postcss-loader": "^0.9.1",
    "posthtml-bem": "^0.2.2",
    "posthtml-loader": "^0.9.0",
    "standard": "^7.1.2",
    "style-loader": "^0.13.0",
    "stylelint": "^6.5.1",
    "stylelint-config-standard": "^8.0.0",
    "sugarss": "^0.1.4",
    "url-loader": "^0.5.7",
    "webpack": "^1.13.1",
    "webpack-dev-server": "^1.14.1",
    "webpack-notifier": "^1.3.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/michael-ciniawsky/website.git"
  },
  "author": "Michael Ciniawsky <michael.ciniawsky@gmail.com>",
  "license": "MIT"
}
